<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Menu>
                <MenuItem Header="Management">
                    <MenuItem x:Name="memberManagement" Header="Member Management" Click="memberManagement_Click"/>
                    <MenuItem x:Name="productManagement" Header="Product Management"/>
                    <MenuItem x:Name="orderManagement" Header="Order Management"/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
